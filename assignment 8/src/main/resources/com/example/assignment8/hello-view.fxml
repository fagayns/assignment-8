    <VBox layoutX="157.0" layoutY="45.0" spacing="10.0">
        <Label text="Name:" />
        <TextField fx:id="nameField" />
        <Label text="Price:" />
        <TextField fx:id="priceField" />
        <Label text="Weight (kg):" />
        <TextField fx:id="weightField" />
        <Label text="Screen Size (inches):" />
        <TextField fx:id="screenSizeField" />
        <Label text="Camera Resolution (MP):" />
        <TextField fx:id="cameraResolutionField" />
    </VBox>
</AnchorPane>