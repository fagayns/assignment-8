                    <TextField fx:id="priceField" />
                    <Label text="Weight (kg):" />
                    <TextField fx:id="weightField" />
                    <Label text="RAM Size (GB):" />
                    <TextField fx:id="ramSizeField" />
                    <Label text="Processor Type:" />
                    <TextField fx:id="processorTypeField" />
                </VBox>
            </Tab>
            <Tab text="Tablet">
                <VBox spacing="10.0">
                    <Label text="Name:" />
                    <TextField fx:id="nameField" />
                    <Label text="Price:" />
                    <TextField fx:id="priceField" />
                    <Label text="Weight (kg):" />
                    <TextField fx:id="weightField" />
                    <Label text="Battery Life (hrs):" />
                    <TextField fx:id="batteryLifeField" />
                    <Label text="Has Stylus:" />
                    <CheckBox fx:id="hasStylusCheckBox" />
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

    <Button layoutX="22.0" layoutY="324.0" onAction="#onAddButtonClick" text="Add" />
    <Button layoutX="434.0" layoutY="337.0" onAction="#onRemoveButtonClick" text="Remove" />
